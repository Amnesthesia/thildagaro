<!DOCTYPE html>
<html>
<head>
  <title>Thilda</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application'  %>
  <%= csrf_meta_tags %>
  <script>
    <%= yield :script_inject %>
  </script>
</head>
<body>
    <div class="outer-wrapper">
        <header>
            <%= render partial: 'layouts/header' %>
        </header>
        <main data-no-turbolink="nope">
            <%= yield %>
        </main>
        <footer>
            <%= render partial: 'layouts/footer' %>
        </footer>
    </div>
</body>
</html>
