<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th>Prioritet</th>
			<th><%= casein_sort_link "Titel", :title %></th>
			<th><%= casein_sort_link "Under-rubrik", :subtitle %></th>
			<th><%= casein_sort_link "Antal bilder", :pictures %></th>
			<th><%= casein_sort_link "Klient", :client %></th>
			<th><%= casein_sort_link "Deadline", :completion_date %></th>
			<th><%= casein_sort_link "Publicerad", :published %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% projects.each do |project| %>
		<tr>
			<td><%= casein_table_cell_link project.order, casein_project_path(project) %></td>
			<td><%= casein_table_cell_link project.title, casein_project_path(project) %></td>
			<td><%= casein_table_cell_link project.subtitle, casein_project_path(project) %></td>
			<td><%= casein_table_cell_link project.pictures.size.to_s, casein_project_path(project) %></td>
			<td><%= link_to  project.client, project.client_url %></td>
			<td><%= casein_table_cell_link project.completion_date, casein_project_path(project) %></td>
			<td><%= casein_table_cell_link (project.published ? "Ja" : "Nej"), casein_project_path(project) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_project_path(project), :method => :delete, :data => { :confirm => "Are you sure you want to delete this project?" }) %>
			</td>
		</tr>
	<% end %>
</table>
