<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th width="10%"><%= casein_sort_link "Publicerad", :published %></th>
			<th><%= casein_sort_link "Rubrik", :title %></th>
			<th><%= casein_sort_link "Datum", :date_added %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% posts.each do |post| %>
		<tr>
			<td><%= casein_table_cell_link (post.published ? "Ja" : "Nej"), casein_post_path(post) %></td>
			<td><%= casein_table_cell_link post.title, casein_post_path(post) %></td>
			<td><%= casein_table_cell_link post.date_added, casein_post_path(post) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_post_path(post), :method => :delete, :data => { :confirm => "Are you sure you want to delete this post?" }) %>
			</td>
		</tr>
	<% end %>
</table>
