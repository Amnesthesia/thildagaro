<!-- Scaffolding generated by Casein v5.1.1.5 -->

<div class="row">
	<div class="owl-carousel owl-them" id="page-header">
		<% f.object.pictures.each do |pic| %>
			<div class="item" style="display: block; width: 100%; height: auto;">
				<%= image_tag(pic.path.top_carousel.url.to_s) %>

				<div class="picture-controls">
					<div class="caption">
						<%= text_field_tag "captions[%s]" % pic.id, pic.caption || "Bild-text här (eller lämna blank)" %>
					</div>
					<div class="remove">

						<%= link_to(casein_show_row_icon("trash"), casein_image_path(pic), method: :delete, data: { :confirm => "Är du säker på att du vill ta bort den här bilden?" }, remote: true, class: 'delete_image') %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-lg-11">
		<%= casein_text_field f, f.object, :title, {casein_label: "Rubrik"} %>
	</div>
	<div class="col-lg-1">
		<%= casein_check_box f, f.object, :published, {casein_label: "Publicera"} %>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<%= casein_text_area f, f.object, :content, {casein_label: "Innehåll", rows: 15} %>
	</div>
</div>


<div class="row">
	<div class="col-lg-6">
		<%= casein_select f, f.object, :layout, Layout: [["Bilder visas till vänster", 1], ["Bilder visas till höger", 2], ["Bilder visas överst", 3]] %>
	</div>
	<div class="col-lg-6">
		<div class="form-group">
			<label class="control-label" for="pictures">Bilder</label>
			<div class="well">
				<%= file_field_tag "pictures[]", type: :file, multiple: true %>
			</div>
		</div>
	</div>
</div>

<% if f.object.pictures.any? %>
	<script>
	$(document).ready(function() {

		$("#page-header").owlCarousel({

			navigation : true, // Show next and prev buttons
			slideSpeed : 300,
			paginationSpeed : 400,
			singleItem:true

			// "singleItem:true" is a shortcut for:
			// items : 1,
			// itemsDesktop : false,
			// itemsDesktopSmall : false,
			// itemsTablet: false,
			// itemsMobile : false

		});



	});

	</script>
<% end %>
