<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Front", :front %></th>
			<th><%= casein_sort_link "Titel", :title %></th>
			<th><%= casein_sort_link "Bilder", :pictures %></th>
			<th><%= casein_sort_link "Publicerad", :published %></th>
			<th><%= casein_sort_link "Layout", :layout %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% pages.each do |page| %>
		<tr>
			<td><%= casein_table_cell_link (page.front ? "Ja" : "Nej"), casein_page_path(page) %> </td>
			<td><%= casein_table_cell_link page.title, casein_page_path(page) %></td>
			<td><%= casein_table_cell_link page.pictures.size.to_s, casein_page_path(page) %></td>
			<td>
				<%= casein_table_cell_link (page.published ? "Ja" : "Nej"), casein_page_path(page) %>
			</td>
			<td>
				<%= link_to casein_page_path(page) do %>
					<% if page.layout == 1 %>
						Bilder till vänster
					<% elsif page.layout == 2 %>
						Bilder till höger
					<% elsif page.layout == 3 %>
						Bilder överst
					<% end %>
				<% end %>
			</td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_page_path(page), :method => :delete, :data => { :confirm => "Are you sure you want to delete this page?" }) %>
			</td>
		</tr>
	<% end %>
</table>
